<h1>註冊一下吧</h1>

  <%= form_for(@user, url:'/account_check') do |form|%>
  <div class = email >
    <%= form.label :email, "填一下信箱吧"%>
    <%= form.email_field :email%>
  </div>
  
  <div class = username> 
    <%= form.label :username, "來個帳號吧"%>
    <%= form.text_field :username%>
  </div>

  <div class = password>
    <%= form.label :password, "通關密語"%>
    <%= form.password_field :password%>
  </div>

  <div class = submit>
    <%= form.submit "填好就點我"%>
  </div>

  <%end%>